<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PvtDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pvtDTitle"
                android:background="@drawable/pvt_title_background"
                android:gravity="center"
                android:textSize="23sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pvtDTitle"
                android:layout_margin="8dp"
                android:drawableLeft="@drawable/summary"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:text="Summary-"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/gtext1"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gtext1"
                android:layout_margin="8dp"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:id="@+id/pvtDSummary"
                android:textStyle="bold"
                />
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pvtDSummary"
                android:layout_margin="8dp"
                android:drawableLeft="@drawable/qualification"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:text="Qualification-"
                android:id="@+id/gtext2"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gtext2"
                android:layout_margin="8dp"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:id="@+id/pvtDQualification"
                android:textStyle="bold"
                />
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pvtDQualification"
                android:layout_margin="8dp"
                android:drawableLeft="@drawable/post"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:text="Post-"
                android:id="@+id/gtext3"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gtext3"
                android:layout_margin="8dp"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:id="@+id/pvtDPost"
                android:textStyle="bold"
                />
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pvtDPost"
                android:layout_margin="8dp"
                android:drawableLeft="@drawable/age"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:text="Age-"
                android:id="@+id/gtext4"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gtext4"
                android:layout_margin="8dp"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:id="@+id/pvtDAge"
                android:textStyle="bold"
                />
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pvtDAge"
                android:layout_margin="8dp"
                android:drawableLeft="@drawable/location"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:text="Location-"
                android:id="@+id/gtext5"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gtext5"
                android:layout_margin="8dp"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:id="@+id/pvtDLocation"
                android:textStyle="bold"
                />
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pvtDLocation"
                android:layout_margin="8dp"
                android:drawableLeft="@drawable/company_name"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:text="Company Name-"
                android:id="@+id/gtext6"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gtext6"
                android:layout_margin="8dp"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:id="@+id/pvtDCompany"
                android:textStyle="bold"
                />
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pvtDCompany"
                android:layout_margin="8dp"
                android:drawableLeft="@drawable/location"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:text="Total Vacancy-"
                android:id="@+id/gtext7"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gtext7"
                android:layout_margin="8dp"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:id="@+id/pvtDSeat"
                android:textStyle="bold"
                />
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pvtDSeat"
                android:layout_margin="8dp"
                android:drawableLeft="@drawable/contact"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:text="Contact Details-"
                android:id="@+id/gtext8"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gtext8"
                android:layout_margin="8dp"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:id="@+id/pvtDContacts"
                android:textStyle="bold"
                />



        </RelativeLayout>



    </ScrollView>



</RelativeLayout>