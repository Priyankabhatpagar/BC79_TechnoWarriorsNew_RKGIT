<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PvtAddActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add private Job"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/addtitle"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/pvt_title_background"/>
    <ScrollView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:textAlignment="center"
                android:textColorHint="#05000C"
                android:id="@+id/addpvtTitle"
                android:hint="Enter Job Title"/>
            <EditText
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:textAlignment="center"
                android:layout_below="@+id/addpvtTitle"
                android:textColorHint="#05000B"
                android:id="@+id/addPvtQualification"
                android:hint="Enter Job Quallification"/>
            <EditText
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:textAlignment="center"
                android:layout_below="@+id/addPvtQualification"
                android:textColorHint="#070010"
                android:id="@+id/addPvtAge"
                android:hint="Enter Job Age"/>
            <EditText
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:textAlignment="center"
                android:layout_below="@+id/addPvtAge"
                android:textColorHint="#070010"
                android:id="@+id/addPvtLocation"
                android:hint="Enter Job Location"/>
            <EditText
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:textAlignment="center"
                android:layout_below="@+id/addPvtLocation"
                android:textColorHint="#070010"
                android:id="@+id/addPvtPost"
                android:hint="Enter Post Names"/>
            <EditText
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:textAlignment="center"
                android:layout_below="@+id/addPvtPost"
                android:textColorHint="#070010"
                android:id="@+id/addpvtCompany"
                android:hint="Enter Company Name "/>
            <EditText
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:textAlignment="center"
                android:layout_below="@+id/addpvtCompany"
                android:textColorHint="#070010"
                android:id="@+id/addPvtSeat"
                android:hint="Enter Total Vacancy"/>
            <EditText
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:textAlignment="center"
                android:layout_below="@+id/addPvtSeat"
                android:textColorHint="#070010"
                android:id="@+id/addpvtContact"
                android:hint="Enter Contact Details "/>

            <EditText
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:textAlignment="center"
                android:layout_below="@+id/addpvtContact"
                android:textColorHint="#070010"
                android:id="@+id/addPvtSummary"
                android:hint="Write Job Summary"/>






            <EditText
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:textAlignment="center"
                android:layout_below="@+id/addPvtSummary"
                android:textColorHint="#070010"
                android:id="@+id/addpvtUrl"
                android:hint="Enter URL "/>



            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_below="@id/addpvtUrl"
                android:text="Submit Job"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:id="@+id/submitPvtJob"
                android:background="@drawable/pvt_button_background"/>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>