<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PvtLogin"
    android:background="@color/colorPrimary">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/private_login"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:id="@+id/img4"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img4"
        android:text="private Login Section"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/demo1"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/demo1"
        android:background="@drawable/pvt_edittext_background"
        android:layout_marginTop="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:hint="Enter Your Email"
        android:drawableStart="@drawable/email"
        android:drawablePadding="10dp"
        android:textStyle="bold"
        android:id="@+id/pvtloginEmail"
        android:textColorHint="@android:color/white"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/pvtloginEmail"
        android:background="@drawable/pvt_edittext_background"
        android:layout_marginTop="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:hint="Enter Your Password"
        android:drawableStart="@drawable/password"
        android:drawablePadding="10dp"
        android:inputType="textPassword"
        android:textStyle="bold"
        android:id="@+id/pvtloginPassword"
        android:textColorHint="@android:color/white"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Login"
        android:layout_centerInParent="true"
        android:layout_below="@id/pvtloginPassword"
        android:layout_marginTop="20dp"
        android:id="@+id/pvtloginButton"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/pvt_button_background"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Registration"
        android:layout_centerInParent="true"
        android:layout_below="@id/pvtloginButton"
        android:layout_marginTop="20dp"
        android:id="@+id/pvtregistrationButton"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/pvt_button_background"/>

</RelativeLayout>