<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"

        >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="CHeck"
                android:background="@drawable/pvt_button_background"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:id="@+id/busUrl"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Business Idea"
                android:background="@drawable/title_background"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:id="@+id/busTitle"
                android:textSize="23sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/busTitle"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/email"
                android:text="Email Address"
                android:textSize="18sp"
                android:drawablePadding="5dp"
                android:id="@+id/busEmail"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/busEmail"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/contact"
                android:text="Phone Number"
                android:textSize="18sp"
                android:drawablePadding="5dp"
                android:id="@+id/busPhone"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/busPhone"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/summary"
                android:text="Description"
                android:maxLines="3"
                android:textSize="18sp"
                android:drawablePadding="5dp"
                android:id="@+id/busDes"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/busDes"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/post"
                android:text="Other Details"
                android:textSize="18sp"
                android:drawablePadding="5dp"
                android:id="@+id/busDetail"
                android:textStyle="bold"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>







</RelativeLayout>




