<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrivateDeshBoard"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome User-"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Add Jobs"
        android:layout_centerInParent="true"
        android:background="@drawable/pvt_button_background"
        android:textColor="@android:color/white"
        android:id="@+id/jumpPvt"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Add Freelancing Work"
        android:layout_below="@id/jumpPvt"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:background="@drawable/pvt_button_background"
        android:textColor="@android:color/white"
        android:id="@+id/addFree"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="LOG OUT"
        android:layout_below="@id/addFree"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:background="@drawable/pvt_button_background"
        android:textColor="@android:color/white"
        android:id="@+id/pvtlogOut"/>

</RelativeLayout>